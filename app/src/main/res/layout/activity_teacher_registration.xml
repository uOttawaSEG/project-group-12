<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/purple_gradient_background">

    <TextView
        android:id="@+id/edtTeacherAppTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="uOttawa OTAMS"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:shadowColor="#80000000"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/edtTeacherRegistrationTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tutor Registration Form"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/edtTeacherAppTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/edtTeacherFirstName"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:hint="First Name"
        android:padding="14dp"
        android:background="@drawable/rounded_input_white"
        android:inputType="text"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/edtTeacherRegistrationTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/edtTeacherLastName"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:hint="Last Name"
        android:padding="14dp"
        android:background="@drawable/rounded_input_white"
        android:inputType="text"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/edtTeacherFirstName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="14dp" />

    <EditText
        android:id="@+id/edtTeacherEmail"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:hint="Email Address"
        android:padding="14dp"
        android:background="@drawable/rounded_input_white"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/edtTeacherLastName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="14dp" />

    <EditText
        android:id="@+id/edtTeacherPassword"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:hint="Password"
        android:padding="14dp"
        android:background="@drawable/rounded_input_white"
        android:inputType="textPassword"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/edtTeacherEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="14dp" />

    <EditText
        android:id="@+id/edtTeacherNumber"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:hint="Phone Number"
        android:padding="14dp"
        android:background="@drawable/rounded_input_white"
        android:inputType="phone"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/edtTeacherPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="14dp" />

    <EditText
        android:id="@+id/edtTeachersHighestDegree"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:hint="Highest Degree"
        android:padding="14dp"
        android:background="@drawable/rounded_input_white"
        android:inputType="text"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/edtTeacherNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="14dp" />

    <EditText
        android:id="@+id/edtTeachersCoursesOffered"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:hint="Courses Offered"
        android:padding="14dp"
        android:background="@drawable/rounded_input_white"
        android:inputType="text"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/edtTeachersHighestDegree"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="14dp" />

    <Button
        android:id="@+id/edtTeacherRegisterButton"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:text="Register"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_button_purple"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/edtTeachersCoursesOffered"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
