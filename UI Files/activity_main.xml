<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/gradient_background" >

    <TextView
        android:id="@+id/edtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:text="UOttawa Tutoring App"
        android:textColor="@color/dark_red"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/edtEmailAdressLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email Adress"
        android:inputType="text" />

    <EditText
        android:id="@+id/edtPasswordLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName"
        android:layout_marginBottom="25dp"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/btnLoginLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:background="@color/dark_red"
        android:layout_marginBottom="40dp"
        android:textColor="#FFFF"
        android:textColorLink="#B4170D" />


    <TextView
        android:id="@+id/edtDontHaveAnAccountLog"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="18dp"
        android:text="Don't have an Account?"
        android:textColor="@color/dark_red"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnRegisterAsStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register as a Student"
        android:layout_marginBottom="22dp"
        android:textColor="#FFFF"
        android:background="@color/dark_red" />

    <Button
        android:id="@+id/btnRegisterAsTeacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_red"
        android:text="Register as a Teacher"
        android:textColor="#FFF" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/txtDisplayInfoLog"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>