<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/edtAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UOttawa Tutoring App"
        android:textColor="@color/dark_red"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/edtStudentRegTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Registration Form"
        android:textColor="@color/dark_red"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="94dp" />

    <EditText
        android:id="@+id/edtStudentFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="First Name:"
        android:textColor="@color/dark_red"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="161dp" />

    <EditText
        android:id="@+id/edtStudentLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Last Name:"
        android:textColor="@color/dark_red"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="245dp" />

    <EditText
        android:id="@+id/edtStudentEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email:"
        android:inputType="textEmailAddress"
        android:textColor="@color/dark_red"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="332dp" />

    <EditText
        android:id="@+id/edtStudentPassWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password: "
        android:inputType="textPassword"
        android:textColor="@color/dark_red"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="412dp" />

    <EditText
        android:id="@+id/edtStudentStudy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text=" Program of Study: "
        android:textColor="@color/dark_red"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="559dp" />

    <EditText
        android:id="@+id/edtStudentNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Phone Number:"
        android:inputType="phone"
        android:textColor="@color/dark_red"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="485dp" />

    <Button
        android:id="@+id/edtStudentRegisterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:background="@color/dark_red"
        android:textColor="#FFFF"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="662dp" />
</androidx.constraintlayout.widget.ConstraintLayout>